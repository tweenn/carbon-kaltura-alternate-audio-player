{
	"name": "carbon-kaltura-alternate-audio-player",
	"version": "1.0.0",
	"description": "An IBM Carbon Alternate Audio Player based on Kaltura",
	"main": "src/index.ts",
	"repository": "git@github.com:tweenn/carbon-kaltura-alternate-audio-player.git",
	"author": "Felipe Zuntini <felipezuntini@hotmail.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"watch": "parcel watch",
		"build": "gulp render",
		"serve": "gulp clean && yarn parcel:serve",
		"parcel:serve": "parcel serve --port 3456 --no-source-maps --public-url /",
		"parcel:build": "parcel build --no-cache --no-source-maps --public-url https://tweenn.github.io/carbon-kaltura-alternate-audio-player/",
		"push:ghpages": "push-dir --dir=dist/demo --branch=gh-pages --force --verbose --cleanup",
		"push:package": "push-dir --dir=dist/package --branch=package --force --verbose --cleanup",
		"deploy:ghpages": "sh __devops__/deploy/gh-pages.sh",
		"deploy:package": "sh __devops__/deploy/package.sh"
	},
	"dependencies": {
		"@carbon/ibmdotcom-services": "^1.37.0",
		"@carbon/ibmdotcom-web-components": "^1.22.0",
		"@carbon/icon-helpers": "^10.32.0",
		"@carbon/icons": "^11.7.0",
		"carbon-web-components": "^1.21.0",
		"htm": "^3.1.1",
		"lit": "^2.3.1",
		"preact": "^10.10.6"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "2.7.0",
		"buffer": "^6.0.3",
		"fs-extra": "^10.1.0",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.3.0",
		"gulp-tap": "^2.0.0",
		"parcel": "^2.7.0",
		"process": "^0.11.10",
		"push-dir": "^0.4.1"
	},
	"targets": {
		"web": {
			"optimize": true,
			"source": [
				"src/demo/404.html"
			],
			"distDir": "./dist/demo/",
			"context": "browser"
		},
		"component": {
			"optimize": true,
			"source": [
				"src/audio-player/index.ts"
			],
			"distDir": "./dist/package/",
			"context": "browser"
		}
	}
}
