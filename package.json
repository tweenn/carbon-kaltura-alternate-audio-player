{
	"name": "carbon-kaltura-alternate-audio-player",
	"version": "1.0.0",
	"description": "An IBM Carbon Alternate Audio Player based on Kaltura",
	"main": "src/index.ts",
	"repository": "git@github.com:tweenn/carbon-kaltura-alternate-audio-player.git",
	"author": "Felipe Zuntini <felipezuntini@hotmail.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "gulp render",
		"build:demo": "parcel build --no-cache --no-source-maps --public-url /",
		"build:package": "parcel build --no-cache --no-source-maps --public-url /",
		"build:storybook": "gulp clean && build-storybook --output-dir ./dist/storybook",

		"serve:demo": "gulp clean && parcel serve --port 3456 --no-source-maps --public-url /",
		"serve:storybook": "start-storybook -p 6006",
		
		"push:ghpages": "push-dir --dir=dist/storybook --branch=gh-pages --force --verbose --cleanup",
		"push:package": "push-dir --dir=dist/package --branch=package --force --verbose --cleanup",
		"push:demo": "gulp deploy:surge",
		
		"deploy:demo": "sh __devops__/deploy/demo.sh",
		"deploy:ghpages": "sh __devops__/deploy/gh-pages.sh",
		"deploy:package": "sh __devops__/deploy/package.sh"
	},
	"dependencies": {
		"@carbon/ibmdotcom-services": "^1.37.0",
		"@carbon/ibmdotcom-web-components": "^1.22.0",
		"@carbon/icon-helpers": "^10.32.0",
		"@carbon/icons": "^11.7.0",
		"carbon-web-components": "^1.21.0",
		"htm": "^3.1.1",
		"lit": "^2.3.1",
		"preact": "^10.11.0"
	},
	"devDependencies": {
		"@babel/core": "^7.19.0",
		"@parcel/transformer-sass": "2.7.0",
		"@storybook/addon-actions": "^6.5.10",
		"@storybook/addon-essentials": "^6.5.10",
		"@storybook/addon-links": "^6.5.10",
		"@storybook/builder-webpack4": "^6.5.10",
		"@storybook/manager-webpack4": "^6.5.10",
		"@storybook/web-components": "^6.5.10",
		"babel-loader": "^8.2.5",
		"buffer": "^6.0.3",
		"fs-extra": "^10.1.0",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.3.0",
		"gulp-surge": "^0.1.4",
		"gulp-tap": "^2.0.0",
		"lit-html": "^2.3.1",
		"parcel": "^2.7.0",
		"parcel-reporter-static-files-copy": "^1.4.0",
		"process": "^0.11.10",
		"push-dir": "^0.4.1"
	},
	"staticFiles": {
		"staticPath": "./src/demo/static",
		"staticOutPath": "./demo/static"
	},
	"targets": {
		"web": {
			"optimize": true,
			"source": [
				"src/demo/404.html"
			],
			"distDir": "./dist/demo/",
			"context": "browser"
		},
		"component": {
			"optimize": true,
			"source": [
				"src/audio-player/index.ts"
			],
			"distDir": "./dist/package/",
			"context": "browser"
		}
	}
}
